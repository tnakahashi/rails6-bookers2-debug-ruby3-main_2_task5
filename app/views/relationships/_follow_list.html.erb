<table class='table table-hover table-inverse'>
  <% if users.exists? %>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= link_to(user) do %>
            <%= image_tag user.get_profile_image, size:'50x50' %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td><%= link_to 'Show', user_path(user) %> </td>
        </tr>
    </tbody>
  <% end %>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</table>